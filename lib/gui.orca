def list : window
{
	def init_gtk
	{
		..handle = gtk.clone('list');
	}


	def '[]='(k, v)
	{
		if k.TYPE != type.int {
			return;
		}

		owner.handle.set_data(k, v);
	}

	def '[]'(k)
	{
		if k.TYPE != type.int {
			return nil;
		}

		return owner.handle.get_data(k);
	}

	def push_back(item)
	{
		..handle.push_back(item);
	}

	def first
	{
		return ..handle.get_data('first');
	}

	def end
	{
		return ..handle.get_data('end');
	}
}


