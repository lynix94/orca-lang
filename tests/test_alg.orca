using alg;

def acc(a)
{
	def sum := 0;

	if a.type == type.int {
		my.sum += a;
	}
}

a = [1, 2, [3, 4, (5, 6)], 7];
my.acc.sum = 0;
alg.traverse (a, my.acc);
print: r = my.acc.sum;

if r != 1+2+3+4+5+6+7 {
	throw test.alg <- 'traverse failed';
}


a = [1..100];
my.acc.sum = 0;
alg.for_each(a.begin(), a.end(), my.acc);
print: r = my.acc.sum;

if r != 5050 {
	throw test.alg <- 'for_each failed';
}




