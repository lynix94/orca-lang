
def.parse calc(str)
{
	stmt : stmt '+' mul
				lambda(...) {
					return argv[0] + argv[2];
				}
		| stmt '-' mul
				lambda(...) {
					return argv[0] - argv[2];
				}
		| mul
				lambda(...) {
					return argv[0];
				}
		;

	mul : mul '*' number
				lambda(...) {
					return argv[0] * argv[2];
				}
		|  mul '/' number
				lambda(...) {
					return argv[0] / argv[2];
				}
		| number
				lambda(...) {
					return argv[0];
				}
		;

	number : r'[0-9]+'
				lambda(...) {
					return argv[0].integer();
				}
		;

	~ : r'[ \t\r\n]+'
		;
}


