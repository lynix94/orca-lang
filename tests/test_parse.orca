
parse def calc(str)
{
	stmt : stmt '+' mul
				%c{
					return argv[0] + argv[2];
				}
		| stmt '-' mul
				%c{
					return argv[0] - argv[2];
				}
		| mul
				%c{
					return argv[0];
				}
		;

	mul : mul '*' number
				%c{
					return argv[0] * argv[2];
				}
		|  mul '/' number
				%c{
					return argv[0] / argv[2];
				}
		| number
				%c{
					return argv[0];
				}
		;

	number : r'[0-9]+'
				%c{
					return argv[0].integer();
				}
		;

	~ : r'[ \t\r\n]+'
		;
}


print: r = my.calc('1*3');
