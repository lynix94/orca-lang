
using thread;
using ipc.mutex;

def count;
def foo(mtx) {
	idx = 0;
	do {
		mtx.lock();
		..count += 1;
		mtx.unlock();
		
		idx += 1;
	} while (idx < 1000);
}


.count = 0;
m = mutex.clone();

tlist = [];
for a in [1..30]: {
	tlist.push_back( thread.run(my.foo, m) );
}

for a in tlist: a.join();

print: .count;

if .count != 30000:
	throw test.thread, 'abnormal count';

print: my, ' OK';

