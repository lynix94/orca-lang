
parse def foo(str)
{
	sdone: stmt
				%c{
					return argv[0];
				}
		;

	stmt : stmt '+' number
				%c{
					return argv[0] + argv[2];
				}
		| number
				%c{
					return argv[0];
				}
		;

	number : r'[0-9]+'
				%c{
					return argv[0].integer();
				}
		;

	~ : r'[ \t\r\n]+'
		;
}

do {
	io.put: '>>> ';
	str = io.input();
	print: my.foo(str);
} while true;
		

